{
    "extends": "airbnb-base",
    "plugins": [
        "babel",
        "import"
    ],
    "rules": {
        "react/require-extension": "off", // https://github.com/airbnb/javascript/issues/978
        "brace-style": [2, "1tbs", {
            "allowSingleLine": true
        }],
        "comma-dangle": [2, "always-multiline"],
        "import/extensions": [2, "never"],
        "import/newline-after-import": 0,
        "max-len": [2, 100, 100, {
            "ignoreComments": true
        }],
        "max-statements-per-line": [2, {
            "max": 2
        }],
        "no-console": 0,
        "no-cond-assign": [2, "except-parens"],
        "no-nested-ternary": 0,
        "no-plusplus": [2, {
            "allowForLoopAfterthoughts": true
        }],
        "no-underscore-dangle": 0,
        "one-var": [2, {
            "uninitialized": "never",
            "initialized": "never"
        }],
        "one-var-declaration-per-line": [2, "initializations"],
        "operator-linebreak": 0,
        "indent": [2, 4],
        "semi": [2, "never"],
        "space-before-function-paren": [2, {
            "anonymous": "always",
            "named": "never"
        }],
        "valid-jsdoc": [2, {
            "requireReturnDescription": false
        }]
    },
    "globals": {
        "describe": true,
        "it": true,
        "before": true,
        "beforeEach": true,
        "after": true,
        "afterEach": true
    }
}
